<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   
    <ScrollView
        android:id="@+id/choose_scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollX="200000dp"
        android:scrollY="40000dp"
        android:isScrollContainer="true"
        
        android:scrollbarThumbHorizontal="@drawable/ic_launcher"
        >
    
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/green_car"
            android:contentDescription="@drawable/green_car"
            android:layout_marginRight="100dp"
            android:layout_gravity="right"
            />
    
    </ScrollView>

</LinearLayout>
